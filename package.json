name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main  # Promeni u granu u koju želiš da radiš deploy

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up Node.js
        uses: actions/setup-node@v2
        with:
          node-version: '14'

      - name: Install dependencies
        run: npm install

      - name: Build the app
        run: npm run build

      - name: Deploy to GitHub Pages
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        run: |
          git config --global user.name 'armin--nukic'
          git config --global user.email 'armin--nukic@hotmail.com'
          git add .
          git commit -m "Deploy to GitHub Pages"
          git push origin main:gh-pages
